            "sigmaS": 90000,
            "lambdaA": 5.0,
            "percentAggr": 0.28,
            "size": 150,
            "levels": 2,
            "levelQty": 120
          }
        },
        {
          "type": "TradeAgent",
          "count": 1,
          "params": {
